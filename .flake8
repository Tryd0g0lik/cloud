[flake8]
extend-ignore = E111, E501, E303, F401, E203,E701
length_line = 3
max-line-length: 80
exclude =
    .git,
    __pycache__,
    conf*,
    old,
    build,
    dist
	*/frontend,
    */venv/*,
    ^venv,
    */.github,
    tests/,
    */.*,
    */main.py,
    */.editorconfig,
    **/migrations,
    */archive,
    */*.md,
    */Python,
per-file-ignores =
    __init__.py: F401
